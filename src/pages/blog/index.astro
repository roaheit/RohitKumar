---
import Layout from '../../layouts/Layout.astro';
import { format } from 'date-fns';

// This would be replaced with actual blog post data
const posts = [
  {
    title: 'Getting Started with Web Development',
    slug: 'getting-started',
    date: new Date('2024-04-15'),
    excerpt: 'A comprehensive guide for beginners looking to start their journey in web development.',
  },
  // Add more posts here
];
---

<Layout title="Blog - Rohit Kumar">
  <div class="max-w-4xl mx-auto px-4">
    <h1 class="text-4xl font-bold text-center mb-12">Blog</h1>
    
    <div class="space-y-8">
      {posts.map(post => (
        <article class="border-b border-gray-200 pb-8">
          <p class="text-gray-500 text-sm mb-2">{format(post.date, 'MMMM d, yyyy')}</p>
          <h2 class="text-2xl font-semibold mb-3">
            <a href={`/blog/${post.slug}`} class="hover:text-primary transition-colors">
              {post.title}
            </a>
          </h2>
          <p class="text-gray-600 mb-4">{post.excerpt}</p>
          <a href={`/blog/${post.slug}`} class="text-primary hover:underline">
            Read more â†’
          </a>
        </article>
      ))}
    </div>
  </div>
</Layout>